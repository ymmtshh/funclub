<%= form_with model: @schedule, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "イベントタイトル", :class => "form-label" %><br />
    <%= f.text_field :title, :class => "form-control" %><br />
    
    日時<br />
    <%= f.date_field :schedule_date, class: 'form-control' %>
    OPEN/
    <%= f.time_select(:open_time, {class:'select-date', id:"open_time", prompt:'--', time_separator: ':'}, ignore_data: true) %>
    START/
    <%= f.time_select(:start_time, {class:'select-date', id:"start-time", prompt:'--', time_separator: ':'}, ignore_data: true) %><br />
    

    <%= f.label :body, "詳細", :class => "form-label" %><br />
    <%= f.text_area :body, :class => "form-control" %><br />

    <%= f.label "画像をアップロード" %><br>
    <%= f.file_field :image %><br>


    <%= f.submit "作成する", :class => "btn btn-primary" %><br />
    <%= link_to 'キャンセル' , "", :class => "btn btn-light" %><br />
  </div>
<% end %>
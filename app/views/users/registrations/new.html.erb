<h1>アカウントを作成</h1>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
      <% if @user.username? %>
      <% else %>
        <%= f.label :username, "USER ID", :class => "form-label" %><br />
        <%= f.text_field :username, value: @user.username, autofocus: true, autocomplete: "username", :class => "form-control" %><br />
      <% end %>

        <% if @user.email? %>
        <% else %>
        <%= f.label :email, "EMAIL", :class => "form-label" %><br />
        <%= f.email_field :email, value: @user.email, autocomplete: "email", :class => "form-control" %><br />
        <% end %>

        <%= f.label :band, "バンドアカウントを登録する", :class => "form-label" %><br />
        <%= f.check_box :band, {}, "true", "false" %><br />

        <%= f.submit "アカウントを作成する", :class => "btn btn-primary btn-block" %><br /><br />
      </div>
  <% end %>


<div class="card col-sm-10 mt-5 mx-auto px-0">

  <div class="card-header">
    <H3>プロフィールを変更する</h3>
  </div>

  <div class="card-body">
    <%= form_with(model: @profile, url: profile_path, method: :put, local: true) do |form| %>

      <div class="col-sm-4">
        <div class="account-profile-img mb-3">
          <%= image_tag @profile.avatar.to_s, :id => "avatar-prev" %>
        </div>
        <% if @profile.avatar? %>
        <label><%= form.check_box :remove_avatar %> 画像を削除する</label>
        <% else %>
        <%= form.hidden_field :avatar_cache %>
        <% end %>
      </div>

      <div class="col-sm-8">
        <%= form.file_field :avatar, :id => "avatar-img", :class => "form-control-file" %>
      </div>

      <div class="form-group">
        <%= form.label :name, "名前", :class => "form-label" %><br />
        <%= form.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :introduction, "自己紹介", :class => "form-label" %><br />
        <%= form.text_area :introduction, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :location, "場所", :class => "form-label" %><br />
        <%= form.select :location, Profile.locations.keys, {} %>
      </div>

      <div class="form-group">
        <%= form.label :web, "web", :class => "form-label" %><br />
        <%= form.text_field :web, :class => "form-control" %>
      </div>

      <div class="actions float-right">
        <%= form.submit "更新する", :class => "btn btn-primary" %><br />
        <%= link_to 'キャンセル' , "/users/#{current_user.id}", :class => "btn btn-light" %>
      </div>

    <% end %>
  </div>

<div class = "sns-link">
  <%= form_with(model: @profile, local: true) do |form| %>
      <h2> SNS URL </h2>
      <div class="form-group">
        <%= form.label :twitter, 'Twitter', class: 'form-control' %>
        <%= form.text_field :twitter, placeholder: "Optional", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :instagram, 'Instagram', class: 'form-control' %>
        <%= form.text_field :instagram, placeholder: "Optional", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :youtube, 'Youtube', class: 'form-control' %>
        <%= form.text_field :youtube, placeholder: "Optional", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :line, 'Line Music', class: 'form-control' %>
        <%= form.text_field :line, placeholder: "Optional", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :apple, 'Apple Music', class: 'form-control' %>
        <%= form.text_field :apple, placeholder: "Optional", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :spotify, 'Spotify', class: 'form-control' %>
        <%= form.text_field :spotify, placeholder: "Optional", class: "form-control" %>
      </div>
      <%= form.submit 'Update', class:'btn-block btn-primary btn-lg ' %>
    </div>
  <% end %>
</div>

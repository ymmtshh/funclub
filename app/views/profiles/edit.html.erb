<h1>プロフィールを変更する</h1>
  <%= form_with(model: [@profile.user, @profile], local: true) do |f| %>

    <div class="form-group">
      <%= image_tag @profile.avatar.to_s, :id => "avatar-prev" %><br>
      <% if @profile.avatar? %>
        <label><%= f.check_box :remove_avatar %> 画像を削除する</label><br>
      <% else %>
        <%= f.hidden_field :avatar_cache %>
        <%= f.label "画像をアップロード" %><br>
        <%= f.file_field :avatar, :id => "avatar-img", :class => "form-control-file" %><br />
      <% end %><br />

        <%= f.label :name, "名前", :class => "form-label" %><br />
        <%= f.text_field :name, :class => "form-control" %><br />

        <%= f.label :introduction, "自己紹介", :class => "form-label" %><br />
        <%= f.text_area :introduction, :class => "form-control" %><br />

      <%= f.label :prefecture_id, "活動拠点" %><br>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name %>
      <%= f.collection_select :city_id, City.all, :id, :name %><br>

        <%= f.label :web, "web", :class => "form-label" %><br />
        <%= f.text_field :web, :class => "form-control" %><br />


      <h2> SNS URL </h2>
        <div class="form-group">
          <%= f.label :twitter, 'Twitter', class: 'form-control' %>
          <%= f.text_field :twitter, placeholder: "Optional", class: "form-control" %><br />

          <%= f.label :instagram, 'Instagram', class: 'form-control' %>
          <%= f.text_field :instagram, placeholder: "Optional", class: "form-control" %><br />

          <%= f.label :youtube, 'Youtube', class: 'form-control' %>
          <%= f.text_field :youtube, placeholder: "Optional", class: "form-control" %><br />

          <%= f.label :line, 'Line Music', class: 'form-control' %>
          <%= f.text_field :line, placeholder: "Optional", class: "form-control" %><br />

          <%= f.label :apple, 'Apple Music', class: 'form-control' %>
          <%= f.text_field :apple, placeholder: "Optional", class: "form-control" %><br />

          <%= f.label :spotify, 'Spotify', class: 'form-control' %>
          <%= f.text_field :spotify, placeholder: "Optional", class: "form-control" %><br />
        </div>

      <%= f.submit "送信", :class => "btn btn-primary" %><br />
      <%= link_to 'キャンセル' , profile_path(@profile), :class => "btn btn-light" %>
    </div>

  <% end %>


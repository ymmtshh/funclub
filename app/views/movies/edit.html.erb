  <div class="card-body">
    <%= form_with model: @movie do |form| %>

      <div class="form-group">
        <%= form.label :title, "タイトル", :class => "form-label" %><br />
        <%= form.text_field :title, :class => "form-control" %>
      </div>

      <%= form.label :published_date, "公開日", class: 'form-label' %><br />
      <%= form.date_field :published_date, class: 'form-control' %>

      <div class="form-group">
        <%= form.label :body, "詳細", :class => "form-label" %><br />
        <%= form.text_area :body, :class => "form-control" %>
      </div>

        <div class="form-group row">
        <div class="col-sm-4">
          <div class="video-player">
              <%= video_tag @movie.video.url, autoplay: false, muted: false, controls: true , :size => "854x480"%>
          </div>

        </div>

      </div>
      
      <div class="actions float-right">
        <%= form.submit "更新する", :class => "btn btn-primary" %><br />
        <%= link_to 'キャンセル' , :back, :class => "btn btn-light" %>
      </div>
      
    <% end %>
  </div>

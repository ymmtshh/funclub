<%= form_with(model: [user, movie], local: true) do |f| %>

  <div class="form-group">
    <% if @movie.video? %>
      <%= video_tag   @movie.video.url, autoplay: false, muted: false, controls: true , :size => "854x480"%><br>
      <label><%= f.check_box :remove_video %> 動画を削除する</label>
    <% else %>
      <%= f.hidden_field :video_cache %>
      <%= f.label "動画をアップロード" %><br>
      <%= f.file_field :video, :accept => 'video/*' %><br>
    <% end %><br>

    <%= f.label :title, "タイトル", :class => "form-label" %><br />
    <%= f.text_field :title, :class => "form-control" %><br />

    <%= f.label :published_date, "公開日", class: 'form-label' %><br />
    <%= f.date_field :published_date, class: 'form-control' %><br />

    <%= f.label :body, "詳細", :class => "form-label" %><br />
    <%= f.text_area :body, :class => "form-control" %><br />

    <%= f.submit "送信", :class => "btn btn-primary" %><br />
  </div>
  
<% end %>
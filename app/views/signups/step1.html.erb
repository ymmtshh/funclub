<%= form_for @profile, url: step2_user_signups_path, method: :get do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <%= hidden_field_tag :current_step, 'step1' %>
  <%= f.hidden_field :avatar_cache %>
  <%= f.label "プロフィール画像をアップロード" %><br>
  <%= f.file_field :avatar, :id => "avatar-img", :class => "form-control-file" %><br />

  <%= f.label :name, "名前", :class => "form-label" %><br />
  <%= f.text_field :name, :class => "form-control" %><br />

  <%= f.label :introduction, "自己紹介", :class => "form-label" %><br />
  <%= f.text_area :introduction, :class => "form-control" %><br />

  <%= f.label :prefecture_id, "活動拠点" %><br>
  <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "選択してください"} %><br>

  <%= f.label :web, "ホームページ", :class => "form-label" %><br />
  <%= f.text_field :web, :class => "form-control" %><br />

  <%= f.submit '次へ進む' %>

<% end %>
<h3>ユーザーネームを変更する</h3>

  <%= form_with(model: current_user, url: account_username_path, method: :put, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :username, "ユーザ名", :class => "form-label" %>
      <%= f.text_field :username, autocomplete: "username", :class => "form-control" %><br />

      <%= f.label :email, "変更後のメールアドレス", :class => "form-label" %>
      <%= f.text_field :email, autocomplete: "email", :class => "form-control" %><br />

      <%= f.submit "送信", :class => "btn btn-primary" %><br />
    </div>
  <% end %>
    <%= link_to "キャンセル", "/account", :class => "btn btn-light" %>

